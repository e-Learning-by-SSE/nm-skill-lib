{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "module": "commonjs",
        "types": ["node"],
        "target": "es2015",
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true
    },
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
    "include": ["src/**/*.ts"]
}
