{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": ".",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
    "include": ["src/**/*.ts"]
}
